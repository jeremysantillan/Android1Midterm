<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.santillanj.android1midterm.MainActivity">

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/social_floating_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:menu_animationDelayPerItem="55"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="@color/colorAccent"
        fab:menu_colorPressed="@color/colorPrimary"
        fab:menu_colorRipple="#99d4d4d4"
        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/ic_shopping_cart_white_24dp"
        fab:menu_labels_colorNormal="@color/colorPrimary"
        fab:menu_labels_colorPressed="@color/colorPrimaryDark"
        fab:menu_labels_colorRipple="#66efecec"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_textColor="#f2f1f1"
        fab:menu_labels_textSize="15sp"
        fab:menu_openDirection="up"
        fab:menu_shadowColor="#66aff198"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="4dp"
        fab:menu_showShadow="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_label="Send via Email"
            fab:fab_size="mini"
            app:fab_colorNormal="#6ac1b9"
            app:fab_colorPressed="@color/colorPrimary"
            android:src="@drawable/ic_email_white_24dp"
            app:fab_colorDisabled="#bdbdbd"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_label="Send via Sms"
            fab:fab_size="mini"
            app:fab_colorNormal="#53b3aa"
            app:fab_colorPressed="@color/colorPrimary"
            android:src="@drawable/ic_textsms_white_24dp"
            app:fab_colorDisabled="#bdbdbd"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_label="Scan Item"
            fab:fab_size="mini"
            app:fab_colorNormal="#32a99e"
            app:fab_colorPressed="@color/colorPrimary"
            android:src="@drawable/ic_add_shopping_cart_white_24dp"
            />

    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>
